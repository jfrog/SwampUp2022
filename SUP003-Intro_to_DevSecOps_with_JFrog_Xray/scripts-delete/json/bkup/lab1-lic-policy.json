{
    "name": "lic_policy",
    "description": "License policy",
    "type": "license",
    "rules": [
        {
            "name": "allowed_lic_rule",
            "criteria": {
                "allowed_licenses": [
                    "Apache-1.0",
                    "Apache-2.0",
                    "MIT",
                    "BSD",
                    "BSD-1-Clause",
                    "ANTLR-PD"
                ],
                "allow_unknown": true
            },
            "actions": {
                "webhooks": [],
                "block_download": {
                    "active": false,
                    "unscanned": false
                },
                "block_release_bundle_distribution": false,
                "fail_build": false,
                "custom_severity": "high"
            },
            "priority": 1
        },
        {
            "name": "banned_lic_rule",
            "criteria": {
                "banned_licenses": [
                    "GPL-1.0",
                    "GPL-2.0",
                    "GPL-3.0",
                    "gnuplot"
                ],
                "allow_unknown": true
            },
            "actions": {
                "webhooks": [],
                "block_download": {
                    "active": false,
                    "unscanned": false
                },
                "block_release_bundle_distribution": false,
                "fail_build": false,
                "custom_severity": "critical"
            },
            "priority": 2
        }
    ]
}